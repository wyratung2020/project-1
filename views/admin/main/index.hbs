<!-- START Thống kê -->
<section id="main-content" class=" ">
    <section class="wrapper main-wrapper row" style=''>
        <div class='col-xs-12'>
            <div class="page-title">
                <div class="pull-left">
                    <h1 class="title">Thống kê</h1>

                </div>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="clearfix"></div>
        <div class="col-lg-12">
            <section class="box nobox marginBottom0">
                <div class="content-body">
                    <div class="row">
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <div class="r4_counter db_box">
                                <i class='pull-left fa fa-cube icon-md icon-rounded icon-primary'></i>
                                <div class="stats">
                                    <h4><strong>{{cateInfo.totalCate}}</strong></h4>
                                    <span>Danh mục, ngành hàng</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <div class="r4_counter db_box">
                                <i class='pull-left fa fa-shopping-cart icon-md icon-rounded icon-accent'></i>
                                <div class="stats">
                                    <h4><strong>{{productInfo.totalProductType}}</strong></h4>
                                    <span>Loại sản phẩm, mặt hàng</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <div class="r4_counter db_box">
                                <i class='pull-left fa fa-cubes icon-md icon-rounded icon-accent'></i>
                                <div class="stats" id="totalProduct">
                                    <h4><strong>{{productInfo.totalProduct}}</strong></h4>
                                    <span>Tổng số sản phẩm</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <div class="r4_counter db_box">
                                <i class='pull-left fa fa-dollar icon-md icon-rounded icon-purple'></i>
                                <div class="stats" id="totalValue">
                                    <h4><strong>{{productInfo.totalValue}}VND</strong></h4>
                                    <span>Tổng giá trị sản phẩm</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <div class="r4_counter db_box">
                                <i class='pull-left fa fa-dollar icon-md icon-rounded icon-purple'></i>
                                <div class="stats" id="totalIncome">
                                    <h4><strong>{{giohangInfo.totalIncome}}</strong></h4>
                                    <span>Tổng doanh thu</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <div class="r4_counter db_box">
                                <i class='pull-left fa fa-users icon-md icon-rounded icon-warning'></i>
                                <div class="stats">
                                    <h4><strong>{{totalUser}}</strong></h4>
                                    <span>Tổng số người dùng</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <div class="r4_counter db_box">
                                <i class='pull-left fa fa-truck icon-md icon-rounded icon-primary'></i>
                                <div class="stats">
                                    <h4><strong>{{giohangInfo.totalOrder}}</strong></h4>
                                    <span>Tổng số đơn hàng</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <div class="r4_counter db_box">
                                <i class='pull-left fa fa-thumbs-up icon-md icon-rounded icon-primary'></i>
                                <div class="stats">
                                    <h4><strong>{{giohangInfo.totalOrderSuccess}}</strong></h4>
                                    <span>Số đơn hàng đã giao</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <div class="r4_counter db_box">
                                <i class='pull-left fa fa-paper-plane icon-md icon-rounded icon-primary'></i>
                                <div class="stats">
                                    <h4><strong>{{giohangInfo.totalOrderWaiting}}</strong></h4>
                                    <span>Số đơn hàng chờ giao</span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <div class="r4_counter db_box">
                                <i class='pull-left fa fa-cubes icon-md icon-rounded icon-accent'></i>
                                <div class="stats">
                                    <h4><strong>{{giohangInfo.totalProductSold}}</strong></h4>
                                    <span>Tổng sản phẩm đã bán</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End .row -->
                </div>
            </section>
        </div>

        <div class='col-xs-12'>
            <div class="page-title">
                <div class="pull-left">
                    <h1 class="title">Trong tháng qua (từ {{dateInfo.firstDayOfMonth}} đến {{dateInfo.now}})</h1>

                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <section class="box nobox marginBottom0">
                <div class="content-body">
                    <div class="row">

                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <div class="r4_counter db_box">
                                <i class='pull-left fa fa-cubes icon-md icon-rounded icon-accent'></i>
                                <div class="stats">
                                    <h4><strong>{{giohangInfoMonth.totalProductSoldMonth}}</strong></h4>
                                    <span>Số sản phẩm đã bán</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <div class="r4_counter db_box">
                                <i class='pull-left fa fa-dollar icon-md icon-rounded icon-purple'></i>
                                <div class="stats" id="totalIncomeMonth">
                                    <h4><strong>{{giohangInfoMonth.totalIncomeMonth}}</strong></h4>
                                    <span>Doanh thu tháng</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <div class="r4_counter db_box">
                                <i class='pull-left fa fa-users icon-md icon-rounded icon-warning'></i>
                                <div class="stats">
                                    <h4><strong>{{userInfoMonth.totalUserMonth}}</strong></h4>
                                    <span>Người dùng mới</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <div class="r4_counter db_box">
                                <i class='pull-left fa fa-truck icon-md icon-rounded icon-primary'></i>
                                <div class="stats">
                                    <h4><strong>{{giohangInfoMonth.totalOrderSuccessMonth}}</strong></h4>
                                    <span>Đơn hàng mới đã giao</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End .row -->
                </div>
            </section>
        </div>

