<section id="main-content" class=" ">
    <section class="wrapper main-wrapper row" style=''>
        <div class='col-xs-12'>
            <div class="page-title">
                <div class="pull-left">
                    <h1 class="title">Danh Sách Đơn Hàng</h1>

                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Đơn Hàng</h2>
                        <div class="actions panel_actions pull-right">
                            <a class="box_toggle fa fa-chevron-down"></a>
                            <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                            <a class="box_close fa fa-times"></a>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">
                            {{#if succsess_msg }}

                            <div class="alert alert-info">
                                <p>{{succsess_msg}}</p>
                            </div>

                            {{/if}}
                            <div class="row" style="padding-left: 50px;">
                                <div>
                                    <p><strong>Mã đơn hàng: </strong>{{pro._id}}</p>
                                </div>
                                <div>
                                    <p><strong>Người đặt: </strong> TODO</p>
                                </div>
                                <div>
                                    <p><strong>Tên: </strong>{{pro.firstname}} {{pro.lastname}} </p>
                                </div>
                                <div>
                                    <p><strong>Số điện thoại: </strong> {{pro.phone}} </p>
                                </div>
                                <div>
                                    <p><strong>Email: </strong> {{pro.email}} </p>
                                </div>
                                <div>
                                    <p><strong>Địa chỉ: </strong> {{pro.diachi}} </p>
                                </div>
                                <div>
                                    <p><strong>Thành phố: </strong> {{pro.thanhpho}} </p>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <!-- ********************************************** -->
                                <table id="example" class="display table table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Tên</th>
                                            <th>Hình</th>
                                            <th>Số Lượng</th>
                                            <th>Giá Tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{# each pro.cart }}
                                        <tr>
                                            <td>1</td>
                                            <td>{{this.item.title}}</td>
                                            <td><img src="{{this.item.imagePath}}" width="100px" alt="">
                                            </td>
                                            <td>{{this.sl}}</td>
                                            <td>{{this.tien}}VND</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                                <tr>
                                    <td colspan="5">
                                        {{#if pro.st}}
                                        <span>Đã Thanh Toán</span>

                                        {{else}}
                                        <a href="/admin/cart/{{pro._id}}/thanh-toan-cart">Thanh Toán</a>
                                        {{/if}} |
                                        <a href="/admin/cart/{{pro._id}}/xoa-cart">Xoá</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="5">
                                        {{# pro}}
                                        <p><strong style="color:red">Tồng Tiền: </strong>{{this.Tien}}VND</p>
                                        {{/pro}}
                                    </td>
                                </tr>



                                <!-- ********************************************** -->
                            </div>
                        </div>
                    </div>
                </section>
            </div>
    </section>
</section>