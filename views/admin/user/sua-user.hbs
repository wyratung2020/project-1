<!-- Danh sách START -->
<section id="main-content" class=" ">
    <section class="wrapper main-wrapper row" style=''>
        <div class='col-xs-12'>
            <div class="page-title">
                <div class="pull-left">
                    <h1 class="title">Danh Sách Người Dùng</h1>

                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12">
                <section class="box ">
                    <header class="panel_header">
                        <a class="title pull-left">{{dataa.email}}</a>
                        <div class="actions panel_actions pull-right">
                            <a class="box_toggle fa fa-chevron-down"></a>
                            <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                            <a class="box_close fa fa-times"></a>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">
                            {{#if succsess_msg }}

                            <div class="alert alert-info">
                                <p>{{succsess_msg}}</p>
                            </div>
                            {{/if}}
                            <div class="row" style="padding-left: 50px;">
                                <div>
                                    <p><strong>Họ: </strong>{{dataa.firstname}} </p>
                                </div>
                                <div>
                                    <p><strong>Tên đệm và tên: </strong>{{dataa.lastname}} </p>
                                </div>
                                <div>
                                    <p><strong>Username </strong>{{dataa.username}}</p>
                                </div>
                                <div>
                                    <p><strong>Số điện thoại: </strong> {{dataa.phone}} </p>
                                </div>
                                <div>
                                    <p><strong>Email: </strong> {{dataa.email}} </p>
                                </div>
                                <div>
                                    <p><strong>Chức vụ: </strong> {{dataa.roles}} </p>
                                </div>
                                <div>
                                    <p><strong>Ngày tạo tài khoản: </strong> {{dataa.joindate}}</p>
                                </div>
                            </div>
                            <form action="" method="post">
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Chức vụ</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <input type="text" id="name" value="{{dataa.roles}}" class="form-control"
                                                name="roles">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="text-left">
                                        <button type="submit" class="btn btn-info">Lưu</button>
                                        <a href="/admin/user/danh-sach.html" type="button" class=" btn "
                                            class="btn">Quay Lại</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                </section>
            </div>
    </section>
</section>