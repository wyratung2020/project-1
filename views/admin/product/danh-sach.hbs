<!-- Danh sách START -->
<section id="main-content" class=" ">
    <section class="wrapper main-wrapper row" style=''>
        <div class='col-xs-12'>
            <div class="page-title">
                <div class="pull-left">
                    <h1 class="title">Danh Sách Sản Phẩm</h1>

                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Tất Cả Sản Phẩm</h2>
                        <div class="actions panel_actions pull-right">

                            <form action="/admin/product/search" method="POST" class="d-flex justify-content-between">
                                <input type="text" class="form-control" id="find" name="find"
                                    placeholder="Tìm bằng ID hoặc tên">
                            </form>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">
                            {{#if succsess_msg }}

                            <div class="alert alert-info">
                                <p>{{succsess_msg}}</p>
                            </div>

                            {{/if}}
                            <div class="col-xs-12">
                                <!-- ********************************************** -->
                                <table id="example" class="display table table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Tên</th>
                                            <th>Hình</th>
                                            <th>Hành động</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        {{#if notFound}}
                                        <strong>Không tìm thấy sản phẩm</strong>
                                        {{/if}}
                                        {{# each product}}

                                        <tr>
                                            <td>1</td>
                                            <td>{{this.title}}</td>
                                            <td> <img src="{{this.imagePath}}" width="100px" alt=""></td>

                                            <td>
                                                <a href="/admin/product/{{this._id}}/xoa-product">Xoá</a> |
                                                <a href="/admin/product/{{this._id}}/sua-product">Sửa</a>
                                            </td>

                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                                <!-- ********************************************** -->
                            </div>
                        </div>
                        <div class="row">
                            {{#if isSPPage}}
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    <li>
                                        <a href="/admin/product/danh-sach/trang-1" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                    {{#each page}}
                                    <li><a href="/admin/product/danh-sach/trang-{{this}}">{{this}}</a></li>
                                    {{/each}}
                                    <li>
                                        <a href="/admin/product/danh-sach/trang-{{maxPage}}" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                            {{/if}}

                            {{#if isSearchPage}}
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    <li>
                                        <a href="/admin/product/search={{url.name}}/trang-1" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                    {{# each page}}
                                    <li><a href="/admin/product/search={{../url.name}}/trang-{{this}}">{{this}}</a></li>
                                    {{/each}}
                                    <li>
                                        <a href="/admin/product/search={{url.name}}/trang-{{maxPage}}"
                                            aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                            {{/if}}
                        </div>
                    </div>
                </section>
            </div>
    </section>
</section>
<!--  Danh sách END -->