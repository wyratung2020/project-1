<body id="category">
	<!-- Start Banner Area -->

	<section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
				<div class="col-first">
					<h1>Trang thể loại</h1>
				</div>
			</div>
		</div>
	</section>

	<!-- End Banner Area -->

	<div class="container">
		<div class="row">
			<div class="col-xl-3 col-lg-4 col-md-5">
				<div class="sidebar-categories">
					<div class="head">Danh mục</div>
					<ul class="main-categories">
						{{# each cate}}
						<li class="main-nav-list">
							<a href="/cate/{{this.tenkhongdau}}.{{this._id}}.html" aria-expanded="true"
								aria-controls="fruitsVegetable"> {{this.ten}}</a>
							{{/each}}
						</li>
					</ul>
				</div>
			</div>
			<div class="col-xl-9 col-lg-8 col-md-7">
				<!-- Start Filter Bar -->

				<!-- End Filter Bar -->
				<!-- Start Best Seller -->
				<input type="hidden" value="{{login}}" id="islogin">
				<section class="lattest-product-area pb-40 category-list">
					<div class="row">
						{{# each product}}
						<!-- single product -->
						<div class="col-lg-4 col-md-6">
							<div class="single-product">
								<img class="img-fluid" src="{{this.imagePath}}" alt="">
								<div class="product-details">
									<h6>{{this.title}}</h6>
									<div class="price">
										<h6>{{this.price}}VND</h6>
									</div>
									<div class="prd-bottom">
										<a href="/them-vao-gio-hang/{{this._id}}" class="social-info islogin">
											<span class="ti-bag"></span>
											<p class="hover-text">Thêm vào giỏ </p>
										</a>
										<a href="/chi-tiet/{{this._id}}" class="social-info">
											<span class="lnr lnr-move"></span>
											<p class="hover-text">Xem chi tiết</p>
										</a>
									</div>
								</div>
							</div>
						</div>
						{{/each}}
					</div>

					<!-- Pagination -->
					<div class="row">
						<nav aria-label="Page navigation">
							<ul class="pagination">
								<li>
									<a href="/san-pham/trang-1" aria-label="Previous">
										<span aria-hidden="true">&laquo;</span>
									</a>
								</li>
								{{# each page}}
								<li><a href="/san-pham/trang-{{this}}">{{this}}</a></li>
								{{/each}}
								<li>
									<a href="/san-pham/trang-{{maxPage}}" aria-label="Next">
										<span aria-hidden="true">&raquo;</span>
									</a>
								</li>
							</ul>
						</nav>
					</div>
				</section>
			</div>
		</div>
	</div>
	<script src="/js/jquery.js"></script>
	<script>
		var islogin = $('#islogin').val();
		if (islogin === 'false')
		{
			$('.islogin').attr('href', '../user/login');
		}
	</script>

</body>