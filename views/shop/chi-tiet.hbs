<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
			<div class="col-first">
				<h1>Thông tin sản phẩm</h1>
			</div>
		</div>
	</div>
</section>
<!-- End Banner Area -->

<!--================Single Product Area =================-->
<div class="product_image_area">
	<div class="container">

		{{#products}}
		<div class="row s_product_inner">
			<div class="col-lg-6">
				<div class="single-prd-item">
					<img class="img-fluid" width="350px" height=" 400px" src="{{this.imagePath}}" alt="">
				</div>
			</div>
			<div class="col-lg-5 offset-lg-1">
				<div class="s_product_text">
					<h3>{{this.title}}</h3>
					<h2>${{this.price}}</h2>
					<ul class="list">
						<li><a href="#"><span>Tình trạng</span> : Còn {{this.sl}}</a></li>
					</ul>
					<p>{{this.description }}</p>
					<div class="card_area d-flex align-items-center">
						<a class="primary-btn" href="/them-vao-gio-hang/{{this._id}}">Thêm vào giỏ hàng</a>

					</div>
				</div>
			</div>
		</div>
		{{/products}}
	</div>
</div>
<!--================End Single Product Area =================-->

