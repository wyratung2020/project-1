<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Danh sách đơn hàng</h1>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <section id="main-content" class=" ">
        <section class="wrapper main-wrapper row" style=''>
            <div class='col-xs-12'>

                <div class="clearfix"></div>
                <div class="col-lg-12">
                    <section class="box ">
                        <header class="panel_header">
                            <h2 class="title pull-left">Đơn Hàng</h2>
                            <div class="actions panel_actions pull-right">
                                <a class="box_toggle fa fa-chevron-down"></a>
                                <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                                <a class="box_close fa fa-times"></a>
                            </div>
                        </header>
                        <div class="content-body">
                            <div class="row">
                                {{#if succsess_msg }}

                                <div class="alert alert-info">
                                    <p>{{succsess_msg}}</p>
                                </div>

                                {{/if}}
                                <div class="row" style="padding-left: 50px;">
                                    <p><strong>Mã đơn hàng: </strong>{{pro._id}}<br>
                                        <strong>Người đặt: </strong> TODO<br>
                                        <strong>Tên: </strong>{{pro.firstname}} {{pro.lastname}} <br>
                                        <strong>Số điện thoại: </strong> {{pro.phone}} <br>
                                        <strong>Email: </strong> {{pro.email}} <br>
                                        <strong>Địa chỉ: </strong> {{pro.diachi}} <br>
                                        <strong>Thành phố: </strong> {{pro.thanhpho}} <br>
                                    </p>
                                </div>
                                <div class="col-xs-12">
                                    <!-- ********************************************** -->
                                    <table id="example" class="display table table-hover table-condensed">
                                        <thead>
                                            <tr>
                                                <th>STT</th>
                                                <th>Tên</th>
                                                <th>Hình</th>
                                                <th>Số Lượng</th>
                                                <th>Giá Tiền</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{# each pro.cart }}
                                            <tr>
                                                <td>1</td>
                                                <td>{{this.item.title}}</td>
                                                <td><img src="{{this.item.imagePath}}" width="100px" alt="">
                                                </td>
                                                <td>{{this.sl}}</td>
                                                <td>{{this.tien}}VND</td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                    <tr>
                                        <td colspan="5">
                                            {{#if pro.st}}
                                            <span>Đơn vị vận chuyển đã xác nhận giao hàng</span>
                                            {{#if pro.danhan}}
                                            <span>| Bạn đã xác nhận đã nhận hàng</span>
                                            {{else}}

                                            <a href="/user/don-hang/xac-nhan-nhan-hang/{{pro._id}}">| Xác nhận đã nhận
                                                hàng</a>
                                            {{/if}}
                                            {{else}}
                                            <span>Đơn hàng đang được vận chuyển</span>
                                            {{/if}}

                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="5">
                                            {{# pro}}
                                            <p><strong style="color:red">Tổng giá tiền: </strong>{{this.Tien}}VND</p>
                                            {{/pro}}
                                        </td>
                                    </tr>



                                    <!-- ********************************************** -->
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
        </section>
    </section>
</div>